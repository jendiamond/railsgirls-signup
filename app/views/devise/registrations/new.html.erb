<div style="background-color:#ccc09e; padding:10px">
  <p class='psmall'>This site is a WIP (work in progress so please save your username and password, they may not be recoverable right now. :)</h4>

  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :username, required: false, autofocus: true, required: true %>
      <%= f.input :email, required: true, autofocus: true, required: true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
