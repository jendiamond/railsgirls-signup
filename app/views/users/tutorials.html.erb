<p id="notice"><%= notice %></p>
<h2 style="background-color:#ccc09e; padding:10px">Potential Rails Girls October&nbsp;20<sup>th</sup>&nbsp;&&nbsp;21<sup>st</sup>&nbsp;2017 | <%= link_to 'New User', new_user_path %></h2>

<div id="pending-users">
<table style="background-color:#8a9e98">
  <thead>
    <tr>
      <th>Status</th>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="width:75px">PENDING</td>
        <td style="width:20px"><%= user.id %></td>
        <td style="width:200px"><%= user.first_name %> <%= user.last_name %></td>
        <td style="width:150px"><%= user.email %></td>
        <td style="width:20px"><%= user.tutorial.tryruby_image %></td>
        <td>
          <% if user.tutorial.try_ruby %>
            <%= image_tag "tryruby-success.png", width: '30' %>
          <% end %>
        </td>
        <td><%= user.tutorial.tryruby_image_updated_at.try(:strftime,'%m.%d %H:%M') %></td>

        <td>
          <% if user.tutorial.try_git %>
            <%= image_tag "trygit-success.jpg", width: '30' %>
          <% end %>
        </td>
        <td><%= user.tutorial.trygit_image_updated_at.try(:strftime,'%m.%d %H:%M') %></td>

        <td>
          <% if user.tutorial.terminal %>
            <%= image_tag "terminal-success.jpg", width: '30' %>
          <% end %>
        </td>
        <td><%= user.tutorial.terminal_image_updated_at.try(:strftime,'%m.%d %H:%M') %></td>

        <td>
          <% if user.tutorial.html_css %>
            <%= image_tag "htmlcss-success.jpg", width: '30' %>
          <% end %>
        </td>
        <td><%= user.tutorial.htmlcss_image_updated_at.try(:strftime,'%m.%d %H:%M') %></td>
          <td style="width:50px; text-align:center"><%= link_to 'Show', user %></td>
          <td style="width:50px; text-align:center"><%= link_to 'Edit', edit_user_path(user) %></td>
          <td style="width:60px; text-align:center"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
