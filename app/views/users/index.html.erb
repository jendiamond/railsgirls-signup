<div style="background-color:#ccc09e; padding:10px">
  <p id="notice"><%= notice %></p>
  <h2>Potential Rails Girls October&nbsp;21<sup>st</sup>&nbsp;&&nbsp;22<sup>nd</sup>&nbsp;2016</h2>
  <h3><%= link_to 'New User', new_user_path %></h3>
  <table style="background-color:#8a9e98">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Zip</th>
        <th>Twitter</th>
        <th>Github</th>
        <th style="text-align:center">21?</th>
        <th>Age</th>
        <th>OS</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <% if user.cancellation %>
          <tr>
            <td style="width:20px"><%= user.id %></td>
            <td style="width:200px"><%= user.first_name %> <%= user.last_name %></td>
            <td style="width:150px"><%= user.email %></td>
            <td style="width:100px">CANCELLED</td>
          </tr>
        <% else %>
          <tr>
            <td style="width:20px"><%= user.id %></td>
            <td style="width:200px"><%= user.first_name %> <%= user.last_name %></td>
            <td style="width:150px"><%= user.email %></td>
            <td style="width:100px"><%= user.phone %></td>
            <td style="width:50px"><%= user.zip_code %></td>
            <td style="width:100px"><%= link_to user.twitter_handle, user.twitter_handle %></td>
            <td style="width:100px"><%= link_to user.github_user_name, user.github_user_name %></td>
            <td style="width:50px"><%= user.over_21 %></td>
            <td style="width:50px"><%= user.age %></td>
            <td style="width:50px"><%= user.operating_system %></td>
            <td style="width:50px; text-align:center"><%= link_to 'Show', user %></td>
            <td style="width:50px; text-align:center"><%= link_to 'Edit', edit_user_path(user) %></td>
            <td style="width:60px; text-align:center"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
